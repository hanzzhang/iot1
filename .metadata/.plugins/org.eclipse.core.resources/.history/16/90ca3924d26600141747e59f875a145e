package storm.blueprints.chapter1.v1;

import java.io.BufferedReader;
import java.io.InputStreamReader;

import org.apache.hadoop.conf.Configuration;
import org.apache.hadoop.fs.FSDataOutputStream;
import org.apache.hadoop.fs.FileSystem;
import org.apache.hadoop.fs.Path;
import org.apache.hadoop.io.LongWritable;
import org.apache.hadoop.io.SequenceFile;


public class WriteToBlob {

	public static void main(String[] args) throws Exception {
		// accessing HDFS file system
		FileSystem hdfs = FileSystem.get(new Configuration());
		Path workingDir = hdfs.getWorkingDirectory();
		Path newFolderPath = new Path("/aaahanz");
		newFolderPath = Path.mergePaths(workingDir, newFolderPath);
		System.out.println("New folder: " + newFolderPath.toString());
		Path newFilePath = new Path(newFolderPath + "/ahanz.txt");
		StringBuilder sb = new StringBuilder();
		for (int i = 10; i <= 15; i++) {
			sb.append("Data-");
			sb.append(i);
			sb.append("\n");
		}
		byte[] byt = sb.toString().getBytes();
		//FSDataOutputStream fsOutStream = hdfs.append(newFilePath); // not supported in azure blob
		FSDataOutputStream fsOutStream = hdfs.create(newFilePath);
		fsOutStream.write(byt);
		fsOutStream.close();
		BufferedReader bfr = new BufferedReader(new InputStreamReader(hdfs.open(newFilePath)));
		String str = null;
		while ((str = bfr.readLine()) != null) {
			System.out.println(str);
		}
	}
}
